APP_NAME="Klubportal"
APP_ENV=production
APP_KEY=
APP_DEBUG=false
APP_URL=https://your-domain.example
ASSET_URL=

APP_LOCALE=de
APP_FALLBACK_LOCALE=en
APP_AVAILABLE_LOCALES=de,en,fr,es,it,tr,hr,bs,sr_Latn,pt

LOG_CHANNEL=stack
LOG_LEVEL=warning

# Central database (adjust to your host)
DB_CONNECTION=central
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=kpkb3
DB_USERNAME=your_db_user
DB_PASSWORD=your_db_password

SESSION_DRIVER=database
SESSION_LIFETIME=120
SESSION_SECURE_COOKIE=true
SESSION_SAME_SITE=lax

QUEUE_CONNECTION=database
FILESYSTEM_DISK=public

# Cache / Redis
CACHE_STORE=redis
REDIS_CLIENT=predis
REDIS_HOST=127.0.0.1
REDIS_PORT=6379
REDIS_PASSWORD=null

# Mail
MAIL_MAILER=smtp
MAIL_HOST=127.0.0.1
MAIL_PORT=25
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="hello@example.com"
MAIL_FROM_NAME="${APP_NAME}"

# Tenancy / domains
SANCTUM_STATEFUL_DOMAINS=your-domain.example

# Build-time only (Vite)
VITE_APP_NAME="${APP_NAME}"
